@using EKE.Data.Entities.Gyopar
@model List<Magazine>
<div style="position: relative;">
    <div class="heading-block nobottomborder">
        <h3>Utolsó lapszámok</h3>
    </div>

    <a href="#" class="button button-small button-rounded button-border button-border-thin t500 nomargin" style="position: absolute; top: 7px; right: 0;">Összes megjelenítése</a>

    <div id="overlayMagazine">
        <i class="fa fa-spinner fa-spin spin-normal"></i>
    </div>

    <div class="real-estate owl-carousel image-carousel carousel-widget bottommargin-lg" data-margin="10" data-nav="true" data-loop="true" data-pagi="false" data-items-xxs="1" data-items-xs="1" data-items-sm="2" data-items-md="4" data-items-lg="4">
        @if (Model != null)
        {
            for (int i = 0; i < Model.Count; i++)
            {
                <div class="oc-item cursor-pointer" onclick="Main.findMagazine(@Model.ElementAt(i).Id)">
                    <div class="real-estate-item">
                        <div class="real-estate-item-image">
                            @if (i == 0)
                            {
                                <div class="label label-danger bgcolor-2">Aktuális lapszám</div>
                            }
                            <a href="javascript:void(0);">
                                <img src="@Model.ElementAt(i).MediaElements.FirstOrDefault().OriginalName" alt="@Model.ElementAt(i).MediaElements.FirstOrDefault().Description">
                            </a>
                            @*<div class="real-estate-item-price">
                                    $1.2m<span>Leasehold</span>
                                </div>*@
                            <div class="real-estate-item-info clearfix">
                                <a href="javascript:void(0);"><i class="icon-line-stack-2"></i> | Megosztás</a>
                                <a href="javascript:void(0);"><i class="icon-line-expand"></i> | Megjelenítés</a>
                            </div>
                        </div>

                        <div class="real-estate-item-desc">
                            <h3><a href="javascript:void(0);">@Model.ElementAt(i).Title</a></h3>
                            <span>@Model.ElementAt(i).DateCreated</span>

                            <a href="javascript:void(0);" class="real-estate-item-link"><i class="icon-info"></i></a>

                            <div class="line" style="margin-top: 15px; margin-bottom: 15px;"></div>

                            <div class="real-estate-item-features t500 font-primary clearfix">
                                <div class="col-md-12 col-xs-12 nopadding">Cikkek száma: <span class="color">@Model.ElementAt(i).Articles.Count</span></div>
                                <div class="col-md-12 col-xs-12 nopadding">Szerző: <span class="color">@Model.ElementAt(i).Author</span></div>
                                @*<div class="col-md-6 col-xs-6 nopadding">Megtekinthető: <span class="text-success"><i class="icon-check-sign"></i></span></div>*@
                                @*<div class="col-md-4 col-xs-6 nopadding">Aktuális szám: <span class="text-danger"><i class="icon-minus-sign-alt"></i></span></div>*@
                            </div>
                        </div>
                    </div>
                </div>

            }
        }
    </div>
</div>