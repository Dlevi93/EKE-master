@model EKE.Data.Entities.Gyopar.Article
@{ }

<div class="row">
    <ol class="breadcrumb2">
        <li><a href="javascript:void(0);">@Model.Magazine.Category.Name</a></li>
        <li onclick="Main.backToMagazines()"><a href="javascript:void(0);">@Model.Magazine.PublishYear</a></li>
        <li onclick="Main.backToArticles()"><a href="javascript:void(0);">@Model.Magazine.PublishSection</a></li>
        <li class="active">@Model.Title</li>
    </ol>
</div>

<div class="row">
    <div class="postcontent nobottommargin clearfix">

        <div class="single-post nobottommargin articleListed">
            <div class="entry clearfix padding-article">
                <div class="entry-title max-height-n">
                    <h2>@Model.Title</h2>
                    @if (Model.Subtitle != null || !String.IsNullOrEmpty(Model.Subtitle))
                    {
                        <h3>@Model.Subtitle</h3>
                    }
                </div>
                <ul class="entry-meta clearfix">
                    <li><i class="icon-calendar3"></i> @Model.DateCreated </li>
                    @if (Model.Author != null)
                    {
                        <li><a href="#"><i class="icon-user"></i> @Model.Author.Name </a></li>
                    }
                    <li><i class="icon-folder-open"></i> <a href="#">@Model.Magazine.PublishYear </a>, <a href="#">@Model.Magazine.PublishSection</a></li>
                    @*<li><a href="#"><i class="icon-camera-retro"></i></a></li>*@
                </ul>
                <div class="notopmargin"> @*entry-content*@ 
                    @Html.Raw(Model.Content)
                    <div class="tagcloud clearfix bottommargin">
                        @if (Model.ArticleTags != null)
                        {
                            @foreach (var item in Model.ArticleTags)
                            {
                                <a href="#">@item</a>
                            }
                        }
                    </div>
                    <div class="clear"></div>
                    <div class="si-share noborder clearfix">
                        <span>Megosztás:</span>
                        <div>
                            <a href="#" class="social-icon si-borderless si-facebook">
                                <i class="icon-facebook"></i>
                                <i class="icon-facebook"></i>
                            </a>
                            <a href="#" class="social-icon si-borderless si-gplus">
                                <i class="icon-gplus"></i>
                                <i class="icon-gplus"></i>
                            </a>
                            <a href="#" class="social-icon si-borderless si-rss">
                                <i class="icon-rss"></i>
                                <i class="icon-rss"></i>
                            </a>
                            <a href="#" class="social-icon si-borderless si-email3">
                                <i class="icon-email3"></i>
                                <i class="icon-email3"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="post-navigation clearfix">

                <div class="col_half nobottommargin">
                    <a href="#">&lArr; Előző cikk</a>
                </div>

                <div class="col_half col_last tright nobottommargin">
                    <a href="#">Következő cikk &rArr;</a>
                </div>

            </div>
            <div class="line"></div>
        </div>
    </div>
    @Html.Partial("Partials/_ArticleSidebar", Model)
</div>