@model ArticleSerchResultVM
@{ }

@if (Model != null)
{
    <div class="heading-block">
        <h3>Keresési eredmények : <i>@Model.FoundItem</i> találat</h3>
    </div>

    <div id="posts" class="post-grid grid-container clearfix" data-layout="fitRows">
        @foreach (var item in Model.Result)
        {
            <div class="entry clearfix">
                @*<div class="entry-image">
                    <a href="~/images/logo/gyopar-logo.png" data-lightbox="image"><img class="image_fade" src="~/images/logo/gyopar-logo.png" alt="Standard Post with Image"></a>
                </div>*@
                <div class="entry-title">
                    <h2><a href="blog-single.html">@item.Title</a></h2>
                </div>
                <ul class="entry-meta clearfix">
                    <li><i class="icon-calendar3"></i> @item.PublishYear </li>
                    <li><a href="blog-single.html#comments"><i class="icon-news"></i> @item.PublishSection </a></li>
                    <li><a href="#"><i class="icon-pencil2"></i> @item.AuthorName </a></li>
                </ul>
                <div class="entry-content">
                    <div class="overflow-text">
                        @Html.Raw(item.Content)
                    </div>
                    <a href="blog-single.html" class="more-link">Tovább</a>
                </div>
            </div>
        }
    </div><!-- #posts end -->
}