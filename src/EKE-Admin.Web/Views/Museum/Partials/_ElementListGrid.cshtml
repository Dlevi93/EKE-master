@using NonFactors.Mvc.Grid;
@using EKE.Data.Entities.Enums
@model IEnumerable<EKE.Data.Entities.Museum.Element>

@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => model.Title).Titled("Cím");
        columns.Add(model => model.Author).Titled("Szerző");
        columns.Add(model => model.Category.Name).Titled("Kategória");
        columns.Add(model => model.Description).Titled("Leírás");
        columns.Add(model => model.DateCreated).Titled("Dátum");
        columns.Add(model => Html.ActionLink("Törlés", "DeleteElement", "Museum", new { id = model.Id }, new { @class = "btn btn-default" })).Titled("Opciók").Encoded(false);
    })
    .Pageable()
    .Empty("Üres adattár a megadott paraméterekkel!")
)