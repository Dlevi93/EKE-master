@{
    ViewData["Title"] = "Lapok kezelése";
}
<link rel="stylesheet" href="~/lib/admin-lte/plugins/select2/select2.css">
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Lapok kezelése
        <small>Vezérlő panel</small>
    </h1>
    @*<ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>*@
</section>

<!-- Main content -->
<section class="content">

    <div class="box box-default">
        <div class="box-body">
            <div class="row">
                <div class="col-md-2">
                    <div class="form-group">
                        <label>1. Kiadvány kiválasztása</label>
                        <select class="form-control select2" style="width: 100%;">
                            <option selected="selected">Gyopár</option>
                            <option>Erdély</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label>2. Évfolyam kiválasztása</label>
                        <select class="form-control select2" style="width: 100%;">
                            <option selected="selected">1800</option>
                            @for (int i = 1801; i <= DateTime.Now.Year; i++)
                            {
                                <option>@i</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label>3. Szám kiválasztása</label>
                        <select class="form-control select2" style="width: 100%;">
                            <option selected="selected">1</option>
                            @for (int i = 2; i <= 6; i++)
                            {
                                <option>@i</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- /.content -->
@section scripts{
    <script src="~/lib/admin-lte/plugins/select2/select2.full.js"></script>
    <script>
        $(function () {
            //Initialize Select2 Elements
            $(".select2").select2();
        });
    </script>
}