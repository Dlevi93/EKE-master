@model EKE.Data.Entities.Museum.Element
@{
}

<section id="page-title">

    <div class="container clearfix">
        <h1>@Model.Title</h1>
        <div id="portfolio-navigation">
            <a href="#"><i class="icon-angle-left" onclick="Museum.getPrevElement('@Model.Id')"></i></a>
            <a href="#"><i class="icon-line-grid" onclick="Museum.closeElemDesc()"></i></a>
            <a href="#"><i class="icon-angle-right" onclick="Museum.getNextElement('@Model.Id')"></i></a>
        </div>
    </div>

</section><!-- #page-title end -->

<div class="container clearfix" style="border-bottom:5px solid #a3986b; margin-bottom:20px;padding-bottom:25px;">
    <div class="col_two_third portfolio-single-image nobottommargin">
        <section id="slider" class="boxed-slider">

            <div class="container clearfix">

                <div class="fslider" data-animation="fade" data-thumbs="true" data-arrows="false" data-speed="1200" data-pause="7000">
                    <div class="flexslider">
                        <div class="slider-wrap">
                            @foreach (var item in Model.MediaElement)
                            {
                                <div class="slide" data-thumb="@item.OriginalName">
                                    <a href="#">
                                        <img src="@item.OriginalName" alt="@item.Name">
                                        <div class="flex-caption slider-caption-bg">@item.Name</div>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>

            </div>

        </section>
    </div><!-- .portfolio-single-image end -->
    <!-- Portfolio Single Content
    ============================================= -->
    <div class="col_one_third portfolio-single-content col_last nobottommargin">

        <!-- Portfolio Single - Description
        ============================================= -->
        <div class="fancy-title title-bottom-border">
            <h2>Leírás:</h2>
        </div>
        @Html.Raw(Model.Description)
        <!-- Portfolio Single - Description End -->

        <div class="line"></div>

        <!-- Portfolio Single - Meta
        ============================================= -->
        <ul class="portfolio-meta bottommargin">
            @if (Model.Author != "-")
            {
                <li><i class="icon-user"></i> &nbsp; @Model.Author</li>
            }
            @if (Model.DatePublished.Year != 1)
            {
                <li><span><i class="icon-calendar3"></i>Készült:</span> @Model.DatePublished.Year</li>
            }
            <li><span><i class="icon-lightbulb"></i>Kategória:</span> @Model.Category.Name</li>
        </ul>
        <!-- Portfolio Single - Meta End -->
        <!-- Portfolio Single - Share
        ============================================= -->
        <div class="si-share clearfix">
            <span>Megosztás:</span>
            <div>
                <a href="#" class="social-icon si-borderless si-facebook">
                    <i class="icon-facebook"></i>
                    <i class="icon-facebook"></i>
                </a>
                <a href="#" class="social-icon si-borderless si-twitter">
                    <i class="icon-twitter"></i>
                    <i class="icon-twitter"></i>
                </a>
                <a href="#" class="social-icon si-borderless si-pinterest">
                    <i class="icon-pinterest"></i>
                    <i class="icon-pinterest"></i>
                </a>
                <a href="#" class="social-icon si-borderless si-gplus">
                    <i class="icon-gplus"></i>
                    <i class="icon-gplus"></i>
                </a>
            </div>
        </div>
        <!-- Portfolio Single - Share End -->

    </div><!-- .portfolio-single-content end -->

    <div class="clear"></div>
</div>