@model EKE.Data.Entities.Museum.Element
<article class="portfolio-item pf-media pf-icons" style="height:350px;">
    <div class="portfolio-image elemTitle" data-id="@Model.Id">
        <a href="#" data-id="@Model.Id" class="elemTitle">
            <img src="@Model.MediaElement.FirstOrDefault().OriginalName" alt="@Model.MediaElement.FirstOrDefault().Name">
        </a>
        <div class="portfolio-overlay">
            <a href="@Model.MediaElement.FirstOrDefault().OriginalName" class="left-icon" data-lightbox="image"><i class="icon-line-plus"></i></a>
            @*<a href="javascript:void(0);" class="right-icon"><i class="icon-line-ellipsis"></i></a>*@
        </div>
    </div>
    <div class="portfolio-desc">
        <h3><a href="#" data-id="@Model.Id" class="elemTitle">@Model.Title</a></h3>
        <span><a href="#" class="elemCategory" data-id="@Model.Category.Id">@Model.Category.Name</a></span>
    </div>
</article>